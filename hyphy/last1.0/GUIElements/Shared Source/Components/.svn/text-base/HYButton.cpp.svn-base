_HYRect rel){	_HYComponent::SetVisibleSize (rel);	_HYPlatformButton::_SetVisibleSize (rel);}//__________________________________________________________________void			_HYButton::EnableButton (bool e){		if (isEnabled!=e)	{		isEnabled = e;		_EnableButton (e);	}}	//__________________________________________________________________void			_HYButton::SetButtonKind (unsigned char k){		if (buttonKind != k)	{		buttonKind = k;		_SetButtonKind (k);	}}